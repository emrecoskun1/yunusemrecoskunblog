---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const options = {
  title: `${post.data.title} - Yunus Emre Coşkun`,
  description: post.data.description
};
---

<Layout options={options}>
  <main class="blog-post">
    <article>
      <header class="post-header">
        <a href="/blog" class="back-link">← Blog'a Dön</a>
        <div class="post-meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('tr-TR', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span class="author">Yazar: {post.data.author}</span>
        </div>
        <h1>{post.data.title}</h1>
        <p class="description">{post.data.description}</p>
        <div class="tags">
          {post.data.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </header>

      <div class="content">
        <Content />
      </div>
    </article>
  </main>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--text-color);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .back-link:hover {
    opacity: 0.7;
  }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(128, 128, 128, 0.2);
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: var(--text-description-color);
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .description {
    font-size: 1.25rem;
    color: var(--text-description-color);
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    background: rgba(128, 128, 128, 0.1);
    border-radius: 4px;
  }

  .content {
    line-height: 1.8;
  }

  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.75rem;
  }

  .content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(pre) {
    margin: 1.5rem 0;
    padding: 1rem;
    background: rgba(128, 128, 128, 0.1);
    border-radius: 8px;
    overflow-x: auto;
  }

  .content :global(code) {
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
  }

  .content :global(ol),
  .content :global(ul) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }
</style>
