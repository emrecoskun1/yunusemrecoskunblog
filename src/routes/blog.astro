---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const options = {
  title: 'Blog - Yunus Emre Coşkun',
  description: 'Yazılım geliştirme, teknoloji ve deneyimlerim hakkında yazılar.'
};
---

<Layout options={options}>
  <main class="blog-page">
    <section class="hero">
      <h1>Blog</h1>
      <p>Yazılım geliştirme, teknoloji ve deneyimlerim hakkında yazılar</p>
    </section>

    <section class="posts-grid">
      {sortedPosts.map((post) => (
        <article class="post-card">
          <a href={`/blog/${post.slug}`}>
            <div class="post-header">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('tr-TR', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              <div class="tags">
                {post.data.tags.map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
            <h2>{post.data.title}</h2>
            <p>{post.data.description}</p>
            <span class="read-more">Devamını Oku →</span>
          </a>
        </article>
      ))}
    </section>
  </main>
</Layout>

<style>
  .blog-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 4rem 0;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--text-description-color);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .post-card {
    border: 1px solid rgba(128, 128, 128, 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    transition: transform 0.2s, border-color 0.2s;
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--text-color);
  }

  .post-card a {
    text-decoration: none;
    color: inherit;
  }

  .post-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  time {
    font-size: 0.875rem;
    color: var(--text-description-color);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: rgba(128, 128, 128, 0.1);
    border-radius: 4px;
  }

  .post-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .post-card p {
    color: var(--text-description-color);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .read-more {
    color: var(--text-color);
    font-weight: 500;
  }
</style>
